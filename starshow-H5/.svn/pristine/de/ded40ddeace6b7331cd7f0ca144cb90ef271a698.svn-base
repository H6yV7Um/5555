var vaildate=function(){
  $("p.error_tip").html("");
  var name=$(".txt_name");
  var phone=$(".txt_phone");
  var province=$(".sel_province");
  var city=$(".sel_city");
  var zg=$(".sel_zg");
  if(name.val()==""){
      $(name).next("p.error_tip").html("姓名不能为空");
      return false;
  }
  if(phone.val()==""){
      $(phone).next("p.error_tip").html("电话不能为空");
      return false;
  }
  if(!(/^1[34578]\d{9}$/.test(phone.val()))){ 
        $(phone).next("p.error_tip").html("手机号码有误，请重填");  
        return false; 
  } 
  if($(province)[0].selectedIndex==-1 || $(province)[0].selectedIndex==0){
      $(province).parent().find("p.error_tip").html("请选择城市");
      return false;
  }
  if($(city)[0].selectedIndex==-1 || $(city)[0].selectedIndex==0){
      $(city).next("p.error_tip").html("请选择区域");
      return false;
  }
  if($(zg)[0].selectedIndex==-1 || $(zg)[0].selectedIndex==0){
      $(zg).next("p.error_tip").html("请选择专柜");
      return false;
  }

  return true;
}
var clearInfo=function(){
  $(".sel_city option").eq(0).prop("selected", 'selected'); 
  $(".sel_province option").eq(0).prop("selected", 'selected'); 
  $(".sel_zg option").eq(0).prop("selected", 'selected'); 
  $(".txt_con").val("");
}
var info_submit=function(){
  var url=commonCla.hostBase+"/meisu";
  var name=$(".txt_name");
  var phone=$(".txt_phone");
  var province=$(".sel_province");
  var city=$(".sel_city");
  var zg=$(".sel_zg");
  var params={
    "name":name.val(),
    "mobile":phone.val(),
    "province":province.val(),
    "city":city.val(),
    "counter":zg.val()
  }
  commonCla.ajaxCommonFun(url,"POST",function(ret){
    if(ret.code=="200"){
      clearInfo()
      swal({
              "title":ret.data,
              "confirmButtonText":"确定",
              "confirmButtonColor": "#ff1d3e",
              "animation":"none",

            });
    }else{
      swal({
              "title":ret.error,
              "confirmButtonText":"确定",
              "confirmButtonColor": "#ff1d3e",
              "animation":"none",

            });
    }

  },params)
}
var initSelectInfo=function(type){
  var data=addr.data;
  var p_inx=$(".sel_province")[0].selectedIndex-1;
  if(type=="city"){
    data=addr.data[p_inx].citys;
  }else if(type=="zg"){
    var c_inx=$(".sel_city")[0].selectedIndex-1;
    data=addr.data[p_inx].citys[c_inx].shoppe;
  }
  var optionHtml="<option>请选择</option>";
  for (var i = 0; i < data.length; i++) {
    if(type=="zg"){
       optionHtml+="<option>"+data[i]+"</option>"
    }else{
       optionHtml+="<option>"+data[i].name+"</option>"
    }
   
  };
  $(".sel_"+type).html(optionHtml)
}
//初始化省份
initSelectInfo("province");
//初始化city
$(".sel_province").change(function(){
  initSelectInfo("city");
  $(".sel_zg").html("<option>请选择</option>")
})
//初始化专柜
$(".sel_city").change(function(){
  initSelectInfo("zg");
})
$(".btn_submit").click(function(){
  if(vaildate()){
		info_submit();
  }
})

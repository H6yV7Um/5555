.one-line {
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.two-line {
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
}
.flex-row {
    display: -webkit-box;
    display: flex;
    display: -webkit-flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
            flex-flow: row nowrap;
}
.flex-column {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
            flex-flow: column nowrap;
}
body,html{
	font-family: "微软雅黑";
    font-family: PingFangRegular;
    background: #fff;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    
}
a {
    text-decoration: none;
    color: #000;
}
.bread {
    width: 100%;
    height: .4rem;
}
.shop-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 140px;
    background: #FF1D3E;
    font-family: PingFangSC-Regular;
    font-size: .34rem;
    color: #FFFFFF;
    -webkit-box-align: center;
            align-items: center;
    -webkit-box-pack: center;
            justify-content: center;
    padding-top: 28px;
    padding-top: constant(safe-area-inset-top);
}
.blank{
    width: 100%;
    height: 160px;
    background: #FF1D3E;
}

.header-con {
    -webkit-box-align: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-box-pack: justify;
        -ms-flex-pack: justify;
            justify-content: space-between;
}
.header-con-row {
    position: fixed;
    top: 0;
    left: 50%;
    -webkit-transform: translate(-50%,0);
    transform:translate(-50%,0);
    opacity: 0;
    height: 44px;
    width: 100%;
    padding-top: 28px;
    overflow: hidden;
    padding-top: constant(safe-area-inset-top);
    
}
.header-block {
    width: 80%;
    overflow: hidden;
    margin: 0 auto;
    text-align: center;
    /* display: flex;
    display:-webkit-flex;
    flex-flow: row nowrap;
    -webkit-flex-wrap: nowrap;
    justify-content: center;
    -webkit-justify-content: center; */
}
.header-con-row .shop-pic{
    /* float: left; */
    display: inline-block;
    width: .5rem;
    height: .5rem;
    min-width: .5rem;
    border-radius: 50%;
    background: #fff;
    overflow: hidden;
    vertical-align: middle;
}
.header-con-row .shop-name {
    /* float: left; */
    /* width: 69%; */
    display: inline;
    margin-top: 0;
    margin-left: .12rem;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.scroll-name .shop-name2 {
    display: none;
}
.header-con-clm {
    margin-top: 30px;
    overflow: hidden;
}
.header-con-clm .shop-pic {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: #fff;
    overflow: hidden;
    margin: 0 auto 10px;
}
.shop-pic img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.header-con-clm .shop-name {
    margin-top: .1rem;
    width: 95%;
    margin: 0 auto;
    text-align: center;
}
.product-list {
    flex-wrap: wrap;
	-webkit-flex-wrap:wrap;
    -webkit-box-pack: justify;
        -ms-flex-pack: justify;
            justify-content: space-between;
    padding: .3rem;
}
.product-item {
    width: 48.2%;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    background: #fff;
}

.product-item .img-wrap {
    width: 100%;
    height: 0;
    padding-bottom: 127.27%;
    background: #fff;
    border-radius: 5px;
    overflow: hidden;
}
.product-item .img-wrap img {
    width: 100%;
    border-radius: 5px;
}
.item-info {
    width: 100%;
    padding: .2rem .01rem .36rem;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    font-family: PingFangSC-Light;
    font-size: .3rem;
    color: #434343;
}
.item-price {
    font-family: PingFangSC-Medium;
    font-size: .34rem;
    margin-bottom: .05rem;
    font-weight: bold;
}
.item-price span {
    margin-left: .08rem;
}
.item-name {
    line-height: .4rem;

}
span.discount {
    font-family: PingFangSC-Light;
    font-size: .24rem;
    color: #FF1D3E;
    font-weight: normal;
    vertical-align: 2px;
    margin-left: .2rem;
}
/*iphonex */

@media only screen and (device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) {
    /* 这代表IPX */
    /* 目前这种设备像素比 和 尺寸是很“奇葩”、特殊的，基本可以确定是 IPX */
    .header-con-row {
        margin-top: 8px;
    }
    .blank {
        height: 178px;
    }
}
@charset "utf-8";
html{color:#000;background:#FFF;}
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,button,
textarea,p,blockquote,th,td{margin:0;padding:0;}
table{border-collapse:collapse;border-spacing:0;}
fieldset,img{border:0;}
address,caption,cite,code,dfn,em,strong,th,var,optgroup{font-style:inherit;font-weight:inherit;}
del,ins{text-decoration:none;}li{list-style:none;}caption,th{text-align:left;}
h1,h2,h3,h4,h5,h6{font-size:100%;font-weight:normal;}q:before,q:after{content:'';}
abbr,acronym{border:0;font-variant:normal;}
sup{vertical-align:baseline;}
sub{vertical-align:baseline;}
legend{color:#000;}
input,button,textarea,select,optgroup,option{font-family:inherit;font-size:inherit;font-style:inherit;
  font-weight:inherit;}
input,button,textarea,select{*font-size:100%;}
input[type="button"], input[type="submit"], input[type="reset"],input[type="text"],input[type="search"],select{
  -webkit-appearance: none;
  outline: 0;
  -webkit-tap-highlight-color:rgba(0,0,0,0)
}
textarea {-webkit-appearance:none;outline:0;}
html,body{ margin:0px; min-height:100%;font-family: "Microsoft YaHei"}

html {font-size: 20px; box-sizing: border-box;}
img{vertical-align: middle}
a{text-decoration: none;}
body{
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;

}

.big_box{
  width: 100%;
  position: relative;
}
.box{
  width: 100%;
  height: 100%;
  background: url("../images/ye3_02.png") no-repeat 0 0;
  background-size: 100% 100%;

  .header_box{
    width: 100%;

  .header{
    width: 100%;
    .header_img{
      width: 100%;
      position: relative;
      img{
        width: 100%;
      }
    }
    .ul_big{
      width: 90%;
      height:2.2rem;
      background: url("../images/ye33_02.png") no-repeat 0 0;
      background-size: 100% 100%;
      display: flex;
      justify-content: space-between;
      padding: 1rem 0.8rem;
      margin: 0 auto;
      position: absolute;
      top: 15.7rem;
      left: 0;
      li:nth-child(1){
        width: 55%;
        text-align: left;
        .name{
          width: 100%;
          font-size: 1.2rem;
          color: #000;
	  font-weight: bold;
        }
        .school{
          color: #97A4AC;
          font-size: 0.5rem;
        }
      }
      .old_num{
        width: 28%;
        font-size: 1.2rem;
        color: #000;
        //margin-top: 0.2rem;
      }
      .user_desc{
        position: absolute;
        bottom: 0;
      }
      .user_desc span{
        font-size:12px;
        margin-left: 10px;
      }
    }
  }
  }
  .main{
    width: 100%;
    p{
      width: 90%;
      margin: 1rem auto;
      margin-top: 4.5rem;
      font-size: 0.4rem;
      line-height: 0.7rem;
      color: #7A8586;
    }
    .main_photo{
      width: 100%;
      height: 100%;
      padding-bottom: 6rem;
      h3{
        width: 40%;
        height: 1.2rem;
        line-height: 1.2rem;
        background: url("../images/ye3_03.png");
        background-size: 100% 100%;
        font-size: 0.7rem;
        text-align: center;
        color: #000;
        font-weight: bold;
        margin: 0 auto;
      }
      ul{
        width: 90%;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin: 0.3rem auto;
        li{
          width: 32%;
          height: 4.65rem;
          margin: 0.13rem auto;
          img{
            width: 100%;
            height: 100%;
          }
        }
      }
    }
    .main_video{
      width: 90%;
      margin: 0 auto;
      .video{
        width: 90%;

        //.open{
        //  width: 18%;
        //  position: absolute;
        //  top: 2.5rem;
        //  left: 6rem;
        //  img{
        //    width: 100%;
        //    opacity: 0.5;
        //  }
        //}
      }
    }
  }

}

  footer {
    width: 100%;
    height: 5rem;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 2000;
    .footer_box {
      width: 70%;
      display: flex;
      justify-content: space-between;
      margin: 0 auto;
      div {
        width: 40%;

        img {
          width: 100%;
        }
      }
    }

  }
.bigImgcon {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #000;
  .swiper-container {
    width: 100%;
    height: 100%;
    .swiper-slide {
      text-align: center;
    }
  }
}

.upBox{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: absolute;
  top: 0;
  left: 0;
  font-size: 0.8rem;
  .up{
    width: 5rem;
    height: 3rem;
    background: #fff;
  }
}
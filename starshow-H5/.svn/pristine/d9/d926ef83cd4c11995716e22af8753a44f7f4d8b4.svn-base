#alert{
    position: absolute;
    top: 50%;
    left: 50%;
    width:70%;
    height: 20%;
    background: #fff;
    border: 1px solid #dedede;
    border-radius: 10px;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -o-border-radius: 10px;
    z-index: 100;
}
#mask{position: absolute;top: 0px;left: 0px; right:0; bottom:0; background-color:#fff;filter: alpha(opacity=80);-moz-opacity: 0.8;opacity: 0.8; display: none;}
.js-close{
    background: #fff;
    float: right;
    padding: 5px 0 0 10px;
    color: #000;
    margin-right: 10px;
    font-size: .6rem;
}
.messdivCons{
    width: 100%;
    overflow: hidden;
    font-size: .3rem;
    color: #000;
    text-align: center;
    padding:10px 0 20px;
}
.sweet-alert {
    width: 60%;
    margin-left: 15%;
}

.sweet-alert h2 {
    font-size: .25rem;
    margin:10px auto;
    line-height:.4rem
}
.sweet-alert button{
    background-color: #ff1d3e;
    padding: 5px 22px;
    font-size:.3rem;
    margin: 10px 5px 0 5px;
}
.sweet-alert p{
  font-size:.3rem;
  margin:10px 0;
}
body.stop-scrolling{
    overflow: auto;
    height: auto;
}

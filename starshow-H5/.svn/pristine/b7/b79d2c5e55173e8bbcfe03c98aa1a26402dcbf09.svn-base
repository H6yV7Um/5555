body{background: #f3f3f3}
html,body{font-size: 62.5%; margin:0px; height:100%;} 

.ml20{
	margin-left:20px;
}
.topicCons{width: 100%; overflow: hidden; font-family: "微软雅黑";background: #fff}
.head_img{width: 100%}
.head_desc{
	font-size: 1.5rem; color: #666; width: 90%; margin: 10px auto;

}
.watchNum{width: 90%; overflow: hidden; margin: 10px auto;color:#999}
.channelTitle{
	clear: both;
	padding-top:10px;
	width: 100%; 
	overflow: hidden;
	font-size: 1.5rem;
	line-height: 2.1rem;
}
.channelTitle img{
	width:25px;
	vertical-align:middle;
	margin-right:5px;
}
.userInfo{
	 width:100%;
	 overflow:hidden;
}
.userInfo img{
	width:20px;
	overflow:hidden;
	vertical-align:middle;
	margin-right:5px;
	margin-top:5px;
	border-radius:50%
}
.userInfo span{
	vertical-align:middle;
	color:#3C3C3C;
}
.rcmdCons{
	width: 92.6%;
	margin-top: 15px;
	padding: 0 3.75% 0;
	background: #ffffff; 
	border-top: 1px solid #dcdcdc;
	border-bottom: 1px solid #dcdcdc;
}
.rcmdList{margin-top:1rem;}
.rcmdList li {
        position: relative;
	width: 100%;
	display: -moz-box;
	display: -webkit-box;
	display: box;
	margin-bottom: 10px;

}
.rcmdList li .imgArea{
    -moz-box-flex:2;
    -webkit-box-flex:2;
    width: 50%;
}
.rcmdList li .imgArea img{width: 100%}
.rcmdList li .descArea{
	padding-left: 10px; 
    -moz-box-flex:1;
    -webkit-box-flex:1;
    width: 50%;
  
}
.rcmdList li .descArea a{
	text-decoration: none;
	color: #000
}

.rcmdList li .descArea h1{
	margin-top: 10px;
	font-size: 1.4rem;
	word-break:break-all;
}
.rcmdList li .descArea p{
	margin-top: 10px;
	font-size: 1.3rem;
	line-height:150%;
}
.rcmdList li .descArea div,.rcmdList li .descArea .activityList span
{
	color:#838383
}
.rcmdList li .descArea div,.rcmdList li .descArea > p
{
	width: 100%;
	overflow: hidden;
	word-break: break-all;

}
.activityList{
	width: 50%;
	margin-top: 10px;
	/*display: -moz-box;
	display: -webkit-box;
	display: box;*/
	position: absolute;
        bottom: 10px;
}
.activityList section{
	-moz-box-flex:1;
    -webkit-box-flex:1;
}
.activityList section img{width:20%;vertical-align: middle;margin-right:3px}
.activityList section span{vertical-align:middle;}
.moreData{
	text-align: center;
	line-height: 20px;
	color: #ff1d3e;
	font-size: 1.3rem;
	width: 100%;
	margin-bottom:10px;
}
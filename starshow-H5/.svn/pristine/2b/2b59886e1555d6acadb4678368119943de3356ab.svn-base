#pic-swiper .swiper-container {
    width: 100%;
    /* height: 8.35rem; */
}

#pic-swiper .swiper-wrapper {
    height: auto;
}

#pic-swiper .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    /* Center slide text vertically */
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
}

#pic-swiper .pic-wrap {
    width: 100%;
    /* height: 100%; */
    /* background: #000; */
}

#pic-swiper .pic-wrap img {
    /* object-fit:contain; */
    width: 100%;
    /* height: 100%; */
}

#pic-swiper .swiper-pagination-fraction {
    bottom: .42rem;
    left: auto;
    right: .47rem;
    width: auto;
    font-size: .28rem;
    color: #fff;
}

#pic-swiper .swiper-pagination-current {
    font-weight: bold;
    font-size: .26rem;
    color: #ff1d3e;
}

#pic-swiper .swiper-pagination-total {
    font-size: .19rem;
}

#pic-view {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #000;
}

#pic-view .swiper-wrapp,
#pic-view .swiper-slide,
#pic-view .pic-wrap {
    width: 100%;
    height: 100%;
}

#pic-view .swiper-slide .pic-wrap {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

#pic-view .swiper-slide img {
    width: 100%;
}

#pic-view .swiper-pagination-fraction {
    position: absolute;
    left: 50%;
    bottom: 0;
    margin-bottom: .2rem;
    -webkit-transform: translateX(-50%);
    -moz-transform: translateX(-50%);
    -o-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    transform: translateX(-50%);
    color: #fff;
    -webkit-filter: drop-shadow(0 .01rem .04rem rgba(0, 0, 0, .4));
            filter: drop-shadow(0 .01rem .04rem rgba(0, 0, 0, .4));
    font-size: .3rem;
    line-height: .34rem;
}


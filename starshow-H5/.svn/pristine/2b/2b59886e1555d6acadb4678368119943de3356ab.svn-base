.recommend {
    width: 100%;
    background: #f0f0f0;
    padding: .38rem .3rem;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}

.recommend .title {
    position: relative;
    width: 3.5rem;
    margin: 0 auto;
    font-size: .28rem;
    color: #9b9b9b;
    text-align: center;
}
.recommend .title::after,
.recommend .title::before {
    content: "";
    position: absolute;
    width: .48rem;
    height: 1px;
    
    top: 50%;
    -webkit-transform: translate3d(0, -50%, 0);
    transform: translate3d(0, -50%, 0);
    background: #ccc;
}
.recommend .title::after {
    right: -0.49rem;
}
.recommend .title::before {
    left: -0.49rem;
}
#container {

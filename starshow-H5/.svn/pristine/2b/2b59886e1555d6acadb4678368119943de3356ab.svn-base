html,
body {
    height: 100%;
    background: #f0f0f0;
}

a {
    text-decoration: none;
    color: #000;
}
.one-line {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.two-line {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.loadding {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}
.loadding .spinner {
    width: 150px;
    height: 80px;
    margin: 100px auto;
    text-align: center;
    -webkit-animation: rotateplane 3.2s infinite ease;
    animation: rotateplane 3.2s infinite ease;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}
.loadding .spinner img{
    width: 30px;
    height: 30px;
}
.learn-detail {
    opacity: 0;
    width: 100%;
    background: #fff;
}

.photo, .player {
    display: none;
}
.player {
    position: relative;
    width: 100%;
}
#video {
    width: 100%;
}

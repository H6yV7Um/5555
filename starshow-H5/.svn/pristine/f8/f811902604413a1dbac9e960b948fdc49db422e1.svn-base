.help-main{
	width: 100%;
	height: 100%;
	background: #f1f1f1;
	
	overflow: auto;
}


header{
	height: 3rem;
	line-height: 3rem;
	border-bottom:1px solid #B3B3B3;
	background: #fff;
	font-size: 16px;
	font-family: "黑体";
}
header .btn_back{
	position: absolute;
}
header h1{
	text-align: center;
}
.help-list{
	font-size: 14px;
	margin-top: 15px;

}
.help-list li{
	clear: both;
	line-height:30px;
	padding:10px;
	border-bottom: 1px solid #eaeaea;
	overflow: hidden;
	background: #fff
}
.help-list li a{
	display: block;
	width: 100%;
	overflow: hidden;
	color: #000
}
.help-list li img{
	width: 20px;
	height: 20px;
	margin-top: 5px;
}
.mt20{
	margin-top: 20px;
}
.col_red{
	color: #ff1d3e;
}
.col_grey{
	color: #999;
}
.helps{
	width: 95%;
	margin-left:auto;
	margin-right:auto;
	line-height: 28px;
	font-size: 14px;

}
.helps h1{
	font-size: 16px;
	font-weight: bold;
	margin: 20px 0 15px 0;

}
.helps h2{
	font-size: 14px;
	font-weight: bold;
	margin: 10px;
}
.process{
	width: 86%;
	margin:0 auto;
	border-left: 1px solid #dedede;
	font-size: 14px;
}
.process ul{
	margin-left: -12px;
}
.process li {
	margin-top: 20px;
}
.process li .process_nums{
	width: 24px;
	height: 24px;
	line-height: 24px;
	display: inline-block;
	text-align: center;
	border-radius: 100%;
	border:1px solid #dedede;
	background: #fff;
	margin-right:5px;
}
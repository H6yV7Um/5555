.one-line {
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.two-line {
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
}
.flex-row {
    display: -webkit-box;
    display: flex;
    display: -webkit-flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
            flex-flow: row nowrap;
}
.flex-column {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
            flex-flow: column nowrap;
}
body,html{
	font-family: "微软雅黑";
    font-family: PingFangRegular;
    background: #f0f0f0;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}
a {
    text-decoration: none;
    color: #000;
}
.bread {
    width: 100%;
    height: .4rem;
}
.shop-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 140px;
    background: #FF1D3E;
    font-family: PingFangSC-Regular;
    font-size: .34rem;
    color: #FFFFFF;
    -webkit-box-align: center;
            align-items: center;
    -webkit-box-pack: center;
            justify-content: center;
    padding-top: 20px;
}
.blank{
    width: 100%;
    height: 160px;
    background: #FF1D3E;
}

.header-con {
    -webkit-box-align: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-box-pack: justify;
        -ms-flex-pack: justify;
            justify-content: space-between;
}
.header-con-row {
    position: fixed;
    top: 0;
    left: 50%;
    -webkit-transform: translate(-50%,0);
    transform:translate(-50%,0);
    /* width: 100%; */
    opacity: 0;
    height: 44px;
    width: 70%;
    padding-top: 30px;
    overflow: hidden;
    
}
.header-con-row .shop-pic{
    float: left;
    width: .5rem;
    height: .5rem;
}
.header-con-row .shop-name {
    float: left;
    width: 88%;
    margin-top: 0;
    margin-left: .12rem;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.scroll-name .shop-name2 {
    display: none;
}
.header-con-clm {
    margin-top: 30px;
    overflow: hidden;
}
.shop-pic {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: #fff;
    overflow: hidden;
    margin: 0 auto 10px;
}
.shop-pic img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.shop-name {
    margin-top: .1rem;
    width: 95%;
    margin: 0 auto;
    text-align: center;
    margin: 0 auto;
}
.product-list {
    flex-wrap: wrap;
	-webkit-flex-wrap:wrap;
    -webkit-box-pack: justify;
        -ms-flex-pack: justify;
            justify-content: space-between;
}
.product-item {
    width: 50%;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    border-bottom: 1px solid #f0f0f0;
    background: #fff;
}
.product-item:nth-child(odd) {
    border-right: 1px solid #f0f0f0;
}
.product-item .img-wrap {
    width: 100%;
    height: 0;
    overflow: hidden;
    padding-bottom: 131.25%;
    background: #fff;
}
.product-item .img-wrap img {
    width: 100%;
}
.item-info {
    width: 100%;
    padding: .16rem .3rem .28rem;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    font-family: PingFangSC-Light;
    font-size: .3rem;
    color: #000000;
    line-height: .38rem;
}
.item-price {
    font-family: PingFangSC-Medium;
    font-size: .34rem;
    margin-top: .13rem;
}
